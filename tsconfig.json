{
  "compilerOptions": {
	"outDir": "./dist",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
	"jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
	"esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2020"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
